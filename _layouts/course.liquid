---
layout: page
---
<div class="course">
  <div class="course-info p-3 mb-4 bg-light rounded-3 border">
    <div class="row">
      {% if page.instructor %}
      <div class="col-md-6 mb-2">
        <strong>Instructor:</strong> {{ page.instructor }}
      </div>
      {% endif %}

      {% if page.course_id %}
      <div class="col-md-6 mb-2">
        <strong>Course ID:</strong> <span class="badge bg-secondary">{{ page.course_id }}</span>
      </div>
      {% endif %}

      {% if page.term %}
      <div class="col-md-6 mb-2">
        <strong>Term:</strong> {{ page.term }}
      </div>
      {% endif %}

      {% if page.location %}
      <div class="col-md-6 mb-2">
        <strong>Location:</strong> {{ page.location }}
      </div>
      {% endif %}

      {% if page.time %}
      <div class="col-12">
        <strong>Time:</strong> {{ page.time }}
      </div>
      {% endif %}
    </div>
  </div>

  {{ content }}

  {% if page.schedule %}
    <h2 class="mt-4 mb-3">Schedule</h2>
    <div class="table-responsive">
      <table class="table table-hover table-bordered">
        <thead class="table-light">
          <tr>
            <th style="width: 10%;">Week</th>
            <th style="width: 40%;">Topic</th>
            <th style="width: 50%;">Materials</th>
          </tr>
        </thead>
        <tbody>
          {% for entry in page.schedule %}
            <tr>
              <td class="text-center align-middle">{{ entry.week }}</td>
              <td class="align-middle">
                {% if entry.topic %}
                  <div class="fw-bold text-primary">{{ entry.topic }}</div>
                {% endif %}
                {% if entry.description %}
                  <div class="schedule-description text-muted small mt-1">
                    {{ entry.description | markdownify | remove: '<p>' | remove: '</p>' }}
                  </div>
                {% endif %}
              </td>
              <td class="align-middle">
                {% if entry.materials %}
                  <ul class="schedule-materials list-unstyled mb-0">
                    {% for material in entry.materials %}
                      <li class="mb-1">
                        {% if material.url %}
                          <a href="{{ material.url | relative_url }}" target="_blank" class="text-decoration-none">
                            <i class="fas fa-file-alt me-1"></i> {{ material.name }}
                          </a>
                        {% else %}
                          <span class="text-secondary">{{ material.name }}</span>
                        {% endif %}
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  {% endif %}
</div>
