---
layout: page
---
<div class="course">
  <div class="course-info p-3 mb-4 bg-light rounded-3 border">
    <div class="row">
      {% if page.instructor %}
      <div class="col-md-6 mb-2"><strong>Instructor:</strong> {{ page.instructor }}</div>
      {% endif %}
      {% if page.course_id %}
      <div class="col-md-6 mb-2"><strong>Course ID:</strong> <span class="badge bg-secondary">{{ page.course_id }}</span></div>
      {% endif %}
      {% if page.term %}
      <div class="col-md-6 mb-2"><strong>Term:</strong> {{ page.term }}</div>
      {% endif %}
      {% if page.location %}
      <div class="col-md-6 mb-2"><strong>Location:</strong> {{ page.location }}</div>
      {% endif %}
      {% if page.time %}
      <div class="col-12"><strong>Time:</strong> {{ page.time }}</div>
      {% endif %}
    </div>
  </div>

  {{ content }}

  {% if page.schedule %}
    <h2 class="mt-5 mb-4">Schedule</h2> <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Week</th>
            <th>Topic</th>
            <th>Materials</th>
          </tr>
        </thead>
        <tbody>
          {% for entry in page.schedule %}
            <tr>
              <td>{{ entry.week }}</td>
              <td>
                {% if entry.topic %}
                  <div class="fw-bold" style="font-size: 1.05rem;">{{ entry.topic }}</div>
                {% endif %}
                {% if entry.description %}
                  <div class="schedule-description text-muted small mt-2">
                    {{ entry.description | markdownify | remove: '<p>' | remove: '</p>' }}
                  </div>
                {% endif %}
              </td>
              <td>
                {% if entry.materials %}
                  <ul class="schedule-materials list-unstyled mb-0">
                    {% for material in entry.materials %}
                      <li class="mb-2"> {% if material.url %}
                          <a href="{{ material.url | relative_url }}" target="_blank">
                            <i class="fas fa-link me-1" style="font-size: 0.8em; opacity: 0.7;"></i>{{ material.name }}
                          </a>
                        {% else %}
                          <span class="text-secondary">{{ material.name }}</span>
                        {% endif %}
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  {% endif %}
</div>
