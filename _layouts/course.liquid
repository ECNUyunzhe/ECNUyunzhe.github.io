---
layout: page
---
<div class="course">
  <div class="course-info p-4 mb-5 rounded-3">
    <div class="row g-3">
      
      {% if page.instructor %}
      <div class="col-md-6">
        <strong>Instructor:</strong> {{ page.instructor }}
      </div>
      {% endif %}

      {% if page.course_id %}
      <div class="col-md-6">
        <strong>Course ID:</strong> 
        <span class="badge bg-secondary ms-1">{{ page.course_id }}</span>
      </div>
      {% endif %}

      {% if page.course_level %}
      <div class="col-md-6">
        <strong>Level:</strong> 
        <span class="badge ms-1" style="background-color: var(--global-theme-color); color: #fff;">{{ page.course_level }}</span>
      </div>
      {% endif %}

      {% if page.term %}
      <div class="col-md-6">
        <strong>Term:</strong> {{ page.term }}
      </div>
      {% endif %}

      {% if page.location %}
      <div class="col-md-6">
        <strong>Location:</strong> {{ page.location }}
      </div>
      {% endif %}

      {% if page.time %}
      <div class="col-12">
        <strong>Time:</strong> {{ page.time }}
      </div>
      {% endif %}
    </div>
  </div>

  {{ content }}

  {% if page.schedule %}
    <h2 class="mt-5 mb-4">Schedule</h2>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th class="text-center" style="width: 80px;">Week</th>
            <th>Topic</th>
            <th>Materials</th>
          </tr>
        </thead>
        <tbody>
          {% for entry in page.schedule %}
            <tr>
              <td class="text-center">{{ entry.week }}</td>
              <td>
                {% if entry.topic %}
                  <div class="fw-bold" style="font-size: 1.05rem;">{{ entry.topic }}</div>
                {% endif %}
                {% if entry.description %}
                  <div class="schedule-description text-muted small mt-1">
                    {{ entry.description | markdownify | remove: '<p>' | remove: '</p>' }}
                  </div>
                {% endif %}
              </td>
              <td>
                {% if entry.materials %}
                  <ul class="schedule-materials list-unstyled mb-0">
                    {% for material in entry.materials %}
                      <li class="mb-2">
                        {% if material.url %}
                          <a href="{{ material.url | relative_url }}" target="_blank">
                            <i class="fas fa-link me-1" style="font-size: 0.8em; opacity: 0.7;"></i>{{ material.name }}
                          </a>
                        {% else %}
                          <span class="text-secondary">{{ material.name }}</span>
                        {% endif %}
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  {% endif %}
</div>
